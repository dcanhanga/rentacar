{
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": ["@rocketseat/eslint-config/node"],
  "plugins": ["import"],
  "rules": {
    "no-console": "warn",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "printWidth": 80,
        "singleQuote": true,
        "bracketSpacing": true,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "endOfLine": "lf",
        "proseWrap": "preserve",
        "parser": "typescript"
      }
    ],
    "@typescript-eslint/explicit-module-boundary-types": "error",
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "interface",
        "format": ["PascalCase"],
        "custom": {
          "regex": "^I[A-Z]",
          "match": true
        }
      }
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "external",
          "index",
          "sibling",
          "parent",
          "internal",
          "builtin"
        ]
      }
    ]
  }
}
